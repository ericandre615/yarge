#version 330 core

precision mediump float;

uniform sampler2D TexSampler;
//uniform sampler2D Image[32];
uniform vec4 TexColor;

in VS_OUTPUT {
    vec2 TexCoord;
} IN;

out vec4 Color;

void main() {
    gl_FragColor = texture2D(TexSampler, IN.TexCoord) * vec4(TexColor.x, TexColor.y, TexColor.z, TexColor.w);
    //int index = int(IN.TexIndex - 0.5);
    //gl_FragColor = texture(Image[index], IN.TexCoord) * vec4(TexColor.x, TexColor.y, TexColor.z, TexColor.w);
}
