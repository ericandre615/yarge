#version 330 core

precision mediump float;

uniform sampler2D RenderTexture;

uniform float Intensity;
uniform vec2 LightPosition;

in VS_OUTPUT {
    vec2 UV;
    vec2 Position;
} IN;

out vec4 Color;

void main() {
    float intensity = Intensity / length(IN.Position.xy - LightPosition);
    Color = texture(RenderTexture, IN.UV) * intensity;
}
